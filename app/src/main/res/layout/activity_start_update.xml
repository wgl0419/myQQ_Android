<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/startAct_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/a5"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/startAct_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/startAct_progressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/start_update_act_margin"

            android:layout_marginRight="@dimen/start_update_act_margin"
            android:max="100" />

        <TextView
            android:id="@+id/startAct_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/start_update_act_margin"
            android:text="正在更新数据 "
            android:textSize="@dimen/start_update_act_textSize" />
    </LinearLayout>
</RelativeLayout>