<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fzq="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <fzq.com.myqq.ui.myview.MySearchView
        android:id="@+id/contactFrag_searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:imeOptions="actionSearch"
        fzq:imagewidth="30dp"
        fzq:textColor="#0000ff"
        fzq:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="新朋友"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/md_ic_chevron_right_grey" />
    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:overScrollMode="never"
        android:scrollbars="none">

        <fzq.com.myqq.ui.myview.MyViewPagerIndicator
            android:id="@+id/contactFrag_myViewPagerIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"></fzq.com.myqq.ui.myview.MyViewPagerIndicator>

    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#ebebeb"
        android:visibility="visible" />

    <fzq.com.myqq.ui.myview.MyViewPager
        android:id="@+id/contactFrag_myViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>