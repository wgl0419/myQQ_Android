<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/mySlideItem_image_user"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:src="@drawable/test_icon" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/mySlideItem_image_user"
        android:layout_alignTop="@id/mySlideItem_image_user"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/mySlideItem_image_user"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mySlideItem_text_msgUser"
            android:text="abcdef喂喂喂"
            android:layout_marginBottom="6dp"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="1223456哈哈哈哈"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>