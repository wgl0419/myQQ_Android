<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e6e1e1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="20dp"
                android:background="#7b7a7a" />

            <RelativeLayout
                android:id="@+id/SettingAct_layout_userManager"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="账号管理"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/SettingAct_icon_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/md_ic_chevron_right_grey" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/SettingAct_icon_1"
                    android:src="@drawable/test_icon" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#7b7a7a" />

            <RelativeLayout
                android:id="@+id/SettingAct_layout_phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="手机号码"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/SettingAct_icon_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/md_ic_chevron_right_grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/SettingAct_icon_2"
                    android:text="159******15"
                    android:textSize="20sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#7b7a7a" />

            <RelativeLayout
                android:id="@+id/SettingAct_layout_QQdaren"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="QQ达人"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/SettingAct_icon_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/md_ic_chevron_right_grey" />

                <TextView
                    android:id="@+id/SettingAct_text_onLineCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/SettingAct_icon_3"
                    android:text="1060天"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/SettingAct_text_onLineCount"
                    android:src="@drawable/test_icon" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#7b7a7a" />

            <RelativeLayout
                android:id="@+id/SettingAct_layout_msgNotify"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="消息通知"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/SettingAct_icon_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/md_ic_chevron_right_grey" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/SettingAct_icon_4"
                    android:src="@drawable/test_icon"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#7b7a7a" />

            <RelativeLayout
                android:id="@+id/SettingAct_layout_chatRecode"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="聊天记录"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/SettingAct_icon_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/md_ic_chevron_right_grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/SettingAct_icon_5"
                    android:text="159******15"
                    android:textSize="20sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#7b7a7a" />

            <RelativeLayout
                android:id="@+id/SettingAct_layout_spaceClean"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="空间清理"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/SettingAct_icon_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/md_ic_chevron_right_grey" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/SettingAct_icon_6" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="20dp"
                android:background="#7b7a7a" />

            <RelativeLayout
                android:id="@+id/SettingAct_layout_accountAndDeviceSafety"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="账号、设备安全"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/SettingAct_icon_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/md_ic_chevron_right_grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/SettingAct_icon_7"
                    android:text="存在风险"
                    android:textSize="20sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#7b7a7a" />

            <RelativeLayout
                android:id="@+id/SettingAct_layout_ContactsAndSecret"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="联系人、隐私"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/SettingAct_icon_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/md_ic_chevron_right_grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/SettingAct_icon_8"
                    android:text="159******15"
                    android:textSize="20sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#7b7a7a" />

            <RelativeLayout
                android:id="@+id/SettingAct_layout_assistant"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="辅助功能"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/SettingAct_icon_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/md_ic_chevron_right_grey" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/SettingAct_icon_9"
                    android:src="@drawable/test_icon"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#7b7a7a" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="20dp"
                android:background="#7b7a7a" />

            <RelativeLayout
                android:id="@+id/SettingAct_layout_playWhitFreeFlow"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="免流量畅玩手机QQ"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/SettingAct_icon_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/md_ic_chevron_right_grey" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/SettingAct_icon_10"
                    android:src="@drawable/test_icon"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#7b7a7a" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="40dp"
                android:background="#7b7a7a" />

            <RelativeLayout
                android:id="@+id/SettingAct_layout_aboutQQAndHelp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="关于QQ与帮助"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/SettingAct_icon_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/md_ic_chevron_right_grey" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/SettingAct_icon_11"
                    android:src="@drawable/test_icon"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="20dp"
                android:background="#7b7a7a" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>